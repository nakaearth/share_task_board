<h2>グループ一覧</h2>
<div id="group_detail" class="group_form">
  <p>
    <b>グループ名:</b>
    <%=@group.name %>
  </p>
  <p>
    <b>参加ユーザ数:</b>
    <%=@count %>
  </p>
</div>
<hr/>
<div id="group_detail" class="group_form">
  <%= form_tag({:action=>'search_user', :controller=>'users',:group_id=> @group.id},{:method=>:post}) do %>
    <div class="field">
    名前で検索してグループへの参加メんバーを設定しよう<br/>
    名前:<%=text_field_tag :word, '',{:size=>30} %>
    </div>
    <div class="field">
    twitter:<%= radio_button_tag :provider,"#{if Rails.env.production? then 'twitter' else 'developer' end}" %>|    
    </div>
    <%=hidden_field_tag :group_id,@group.id %> 
    <%=submit_tag '検索'%>
  <% end %>
</div>
<table>
  <th class="list_menu">参加ユーザ名</th>
 <% @group_users.each do |user| %>
  <tr>
    <td><%=user.name %>
  </tr>
  <% end %>
</table>
