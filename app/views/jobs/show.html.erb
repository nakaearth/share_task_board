<p id="notice"><%=notice %></p>
<p id="alert"><%=alert %></p>
<div id="task_detail" class="job_form">
<p>
  <b>タイトル:</b>
  <%= @job.title %>
</p>
<p>
  <b>概要:</b>
  <%= @job.description %>
</p>
<p>
  <b>状態:</b>
  <%= status_str(@job.status) %>
</p>
<p>
  <b>優先順位:</b>
  <%= priority_str(@job.priority) %>
</p>
<%= link_to '編集', edit_job_path(@job) %>&nbsp;&nbsp;|
<%= link_to '削除', :action=>'destroy_task', :controller=>'jobs', :id=>@job.id %>&nbsp;&nbsp;|
</div>
