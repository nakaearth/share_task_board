<div class="group_list_menu">
<%= form_tag({:action=>'group_job_list', :controller=>'jobs'},{:method=>:post}) do %>
  グループ:
  <%=select_tag :group_id, options_from_collection_for_select(@group, :id, :name) %>
  <%=submit_tag '絞り込む' %>
<% end %>
</div>

<table id="task_board" class="board">
  <tr>
  <td id="todoCaption" class="task_list_board1">
    まだ未着手
    <div id="todo_board" class="board">
    <%=render @todo_jobs %>
    </div>
  </td>
  <td id="doingCaption" class="task_list_board2">
    取り組み中
    <div id="doing_board" class="board">
    <%=render @doing_jobs %>
    </div>
  </td>

  <td id="doneCaption" class="task_list_board3">
    完了
    <div id="done_board" class="board">
    <%=render @done_jobs %>
    </div>
  </td>
  </tr>
</table>

<br />

