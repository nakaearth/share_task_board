<div id="receive_task_list">
  <h2><% unless current_user.user_name == "" then %> <%=current_user.user_name+"さんの" %> <% end%>受け持った一覧</h2>
  <table id="receive_tasks" class="board">
    <th class="list_menu">概要</th>
    <th ></th>
    <th ></th>
    <% @myfriends_tasks.each do|m_task| %>
    <tr class="task_css<%=m_task.priority %>">
      <td>
      <%=m_task.title %>
      </td>
      <td ><%=status_str(m_task.status) %></td>
      <td><%= link_to '編集する', edit_task_path(m_task) %></td>
      <td><%= link_to '削除する', m_task, :confirm => '本当に削除しますか？', :remote=>true,:method => :delete %>
      </td>
    </tr>
    <% end %>
  </table>
  <br/>
  <hr/>
</div>
<h2><% unless current_user.user_name == "" then %> <%=current_user.user_name+"さんの" %> <% end%>のやること一覧</h2>
<table id="task_board" class="board">
  <tr>
  <td id="todoCaption" class="task_list_board">
    まだ未着手
    <div id="todo_board" class="board">
    <%=render @todo_tasks %>
    </div>
  </td>
  <td id="doingCaption" class="task_list_board">
    取り組み中
    <div id="doing_board" class="board">
    <%=render @doing_tasks %>
    </div>
  </td>

  <td id="doneCaption" class="task_list_board">
    完了
    <div id="done_board" class="board">
    <%=render @done_tasks %>
    </div>
  </td>
  </tr>
</table>

<br />

